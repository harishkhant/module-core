<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="reva" translate="label" sortOrder="100" class="reva-tab">
            <label>Reva</label>
        </tab>
        <section id="reva_config" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1"
            showInStore="1">
            <class>reva-separator-top</class>
            <label><![CDATA[Information &amp; Marketplace]]></label>
            <tab>reva</tab>
            <resource>Reva_Core::information</resource>
            <group id="reva_menu" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="0"
                showInStore="0">
                <label><![CDATA[Information]]></label>
                <comment>
                    <![CDATA[
                        <div class="reva-info">
                            <a href="https://revamagento.w3spaces.com/" target="_blank">
                                <div class="reva-logo"></div>
                                RevaMagento
                            </a>
                            Â© 2024 - RevaMagento - All rights reserved
                            <a href="#" target="_blank">Contact us</a>
                            <a href="#">Mail for Support</a>
                            <a href="#" target="_blank">More Extensions</a>
                        </div>
                        <div class="reva-module">
                            Reva Menu
                        </div>
                        <hr />
                    ]]>
                </comment>
                <field id="menu_enable" translate="label comment" type="select" sortOrder="25" showInDefault="1"
                    showInWebsite="0" showInStore="0">
                    <label>Enable Reva Menu</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
